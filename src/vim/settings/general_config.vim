" General configuration
  set encoding=utf-8
  " BUFFERS
  set hidden
  set clipboard=unnamedplus
  set number relativenumber
  filetype plugin indent on
  " Escapar
  inoremap jj <esc>
  syntax on
  " highlight LINE
  set cursorline
  " Resaltado de busqueda
  set hlsearch
  " Resaltar pares [] {} etc.
  set showmatch
  " Sensibilidad
  set ignorecase
  set smartcase
  set incsearch
  set expandtab

